{
  // Editor
  "editor.fontFamily": "Jetbrains Mono, Menlo, Monaco, 'Courier New', monospace",
  "editor.codeLensFontFamily": "Jetbrains Mono, Menlo, Monaco, 'Courier New', monospace",
  "editor.inlayHints.fontFamily": "Jetbrains Mono, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 15,
  "editor.lineHeight": 26,
  "editor.letterSpacing": 0.5,
  "editor.renderWhitespace": "all",
  "editor.scrollBeyondLastLine": false,
  // Files
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/.next": true,
    "**/yarn.lock": true,
    "**/npm-debug.log": true,
    "**/*.bs.js": true
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  // Security
  "security.workspace.trust.untrustedFiles": "open",
  // Search
  "search.showLineNumbers": true,
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_component": true,
    "**/vendor": true,
    "**/.git": true,
    "**/dist": true,
    "**/*.code-search": true,
    "out": true,
    "coverage": true
  },
  // Terminal
  "terminal.explorerKind": "external",
  // Window
  "window.closeWhenEmpty": true,
  "window.nativeTabs": true,
  "window.titleBarStyle": "native",
  "window.title": "${activeEditorShort}${separator}${rootName}",
  // Workbench
  "workbench.iconTheme": "vscode-icons",
  "workbench.tree.renderIndentGuides": "always",
  "workbench.view.alwaysShowHeaderActions": true,
  // Extensions
  // Indent Rainbow
  "indentRainbow.colors": [
    "rgba(255,69,58,0.07)",
    "rgba(255,159,10,0.07)",
    "rgba(255,214,10,0.07)",
    "rgba(48,209,88,0.07)",
    "rgba(100,210,255,0.07)",
    "rgba(10,132,255,0.07)",
    "rgba(94,92,230,0.07)"
  ],
  "indentRainbow.errorColor": "rgba(255,69,58,0.4)",
  "indentRainbow.tabmixColor": "rgba(255,69,58,0.2)",
}
